<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.noConnection.tryAgain" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="fontFamily">@font/avenir</item>
        <item name="android:fontFamily">@font/avenir</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">14sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">18sp</item>
        <item name="strokeColor">@color/primaryTextColor</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="AppTheme.current.changeLocation" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="icon">@drawable/ic_location</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">14sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">18sp</item>
        <item name="strokeColor">@color/primaryTextColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.current.tempTitle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/avenir</item>
        <item name="android:textSize">@dimen/mainTempTitleTextSize</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">@dimen/mainTempTitleMinTextSize</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">@dimen/mainTempTitleMaxTextSize</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.current.feelsTempTitle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/avenir</item>
        <item name="android:textSize">@dimen/mainFeelsTitleTextSize</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">@dimen/mainFeelsTitleMinTextSize</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">@dimen/mainFeelsTitleMaxTextSize</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>


    <style name="AppTheme.hourlyItem.tempTitle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/avenir</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/hourlyItemTempTextSize</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">@dimen/hourlyItemTempMinTextSize</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">@dimen/hourlyItemTempMaxTextSize</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.hourlyItem.timeTitle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/avenir</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/hourlyItemTimeTextSize</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">@dimen/hourlyItemTimeMinTextSize</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">@dimen/hourlyItemTimeMinTextSize</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.dailyItem.primaryText" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/avenir</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/dailyItemTextSize</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">@dimen/dailyItemMinTextSize</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">@dimen/dailyItemMaxTextSize</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.dailyItem.secondaryText" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/avenir</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dailyItemTextSize</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">@dimen/dailyItemMinTextSize</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">@dimen/dailyItemMaxTextSize</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.cityItem.secondaryText" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/avenir</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">18sp</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">20sp</item>
    </style>

    <style name="AppTheme.cityItem.searchTextTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/search_box_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:enabled">true</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="hintTextColor">@color/primaryTextColor</item>
        <item name="hintTextAppearance">@style/AppTheme.cityItem.secondaryText</item>
    </style>

    <style name="AppTheme.cityItem.searchTextEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/AppTheme.cityItem.secondaryText</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
</resources>